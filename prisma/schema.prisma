// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       String    @id @unique
  uid      String    @unique
  role     Role      @default(USER)
  email    String    @unique
  joinDate DateTime
  problems Problem[]
  solveds  Solved[]
  contests Contest[]
  sheets   Sheet[]
}

model Solved {
  id        BigInt   @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  problem   Problem  @relation(fields: [problemId], references: [id])
  problemId BigInt
  answer    String
}

model Sheet {
  id        BigInt   @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  contest   Contest  @relation(fields: [contestId], references: [id])
  contestId BigInt
}

model Topic {
  id        String     @id @unique
  name      String
  subtopics Subtopic[]
  problems  Problem[]
  contests  Contest[]
}

model Subtopic {
  id       String    @id @unique
  name     String
  topicId  String
  topic    Topic     @relation(fields: [topicId], references: [id])
  problems Problem[]
  contests Contest[]
}

model Problem {
  id         BigInt             @id @default(autoincrement())
  createdAt  DateTime           @default(now())
  updatedAt  DateTime?          @updatedAt
  title      String
  statement  String?
  answer     String
  type       String
  author     User               @relation(fields: [authorId], references: [id])
  authorId   String
  topic      Topic?             @relation(fields: [topicId], references: [id])
  topicId    String?
  subTopic   Subtopic?          @relation(fields: [subTopicId], references: [id])
  subTopicId String?
  solveds    Solved[]
  toContests ContestToProblem[]
}

model Contest {
  id          BigInt             @id @default(autoincrement())
  createdAt   DateTime           @default(now())
  updatedAt   DateTime?          @updatedAt
  title       String
  description String?
  author      User               @relation(fields: [authorId], references: [id])
  authorId    String
  topic       Topic?             @relation(fields: [topicId], references: [id])
  topicId     String?
  subTopic    Subtopic?          @relation(fields: [subTopicId], references: [id])
  subTopicId  String?
  startDate   DateTime
  endDate     DateTime
  sheets      Sheet[]
  toProblems  ContestToProblem[]
}

model ContestToProblem {
  contest   Contest @relation(fields: [contestId], references: [id])
  contestId BigInt
  problem   Problem @relation(fields: [problemId], references: [id])
  problemId BigInt
  score     Int
  order     Int?

  @@id([contestId, problemId])
}
